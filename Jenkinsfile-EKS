pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Deploy Backend 1') {
            steps {
                echo "Applying backend1 deployment and service"
                sh '''
                    kubectl apply -f k8s/backend1/deployment.yaml
                    kubectl apply -f k8s/backend1/service.yaml
                '''
            }
        }
    }

    post {
        success {
            echo 'Backend deployments and services applied successfully!'
        }
        failure {
            echo 'Failed to apply some backend Kubernetes resources.'
        }
    }
}
